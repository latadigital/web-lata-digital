//- Default Template
doctype html
html(lang="es")
	block vars
		- var pageTitle = 'Título Genérico'

	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title #{pageTitle}
		include ../partials/_favicon.pug
		// inject:css
		// endinject
		link(rel="stylesheet" href="css/main.min.css")

	body
		block header
			include ../partials/_header.pug

		main(role="main")
			block content

		block scripts
			script(src="js/libs/bundle.js")
			// inject:js
			// endinject
			script(src="js/main.min.js")

		block foot
			include ../partials/_footer.pug

